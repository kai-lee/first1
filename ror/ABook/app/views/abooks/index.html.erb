
<body>
<h1><%=image_tag("chibi1.jpg", alt: "Address Book")%><br>
<br>Your Local Address Book</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Zip code</th>
      <th>Favorite color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @abooks.each do |abook| %>
      <tr>
        <td><%= abook.first_name.titleize %></td>
        <td><%= abook.last_name.titleize %></td>
        <td><%= abook.email.titleize %></td>
        <td><%= abook.zipcode %></td>
        <td><%= abook.fav_color.titleize %></td>
        <td><font color = "white"><%= link_to 'Show', abook %></font></td>
        <td><font color = "white"><%= link_to 'Edit', edit_abook_path(abook) %></font></td>
        <td><font color="red"><%= link_to 'Destroy', abook, method: :delete, data: { confirm: 'Are you sure you want to delete this entry?' } %></font></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<table id="1">
	<thead>
<tr>
	<th id="1"><%= link_to 'Add new entry', new_abook_path %></th>

</body>
