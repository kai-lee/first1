<h1>Listing abooks</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Zipcode</th>
      <th>Fav color</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @abooks.each do |abook| %>
      <tr>
        <td><%= abook.first_name %></td>
        <td><%= abook.last_name %></td>
        <td><%= abook.email %></td>
        <td><%= abook.zipcode %></td>
        <td><%= abook.fav_color %></td>
        <td><%= link_to 'Show', abook %></td>
        <td><%= link_to 'Edit', edit_abook_path(abook) %></td>
        <td><%= link_to 'Destroy', abook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

